// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../data"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String
  profile  String
}

model certificates {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  name        String
  cpf         String
  phone       String
  birthDate   DateTime
  address     String
  certificate String
  filename    String?
  createAt    DateTime
  updateAt    DateTime
}
